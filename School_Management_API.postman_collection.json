{
  "info": {
    "name": "School Management API",
    "description": "A collection for testing the School Management API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Add School",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"Test School\",\n    \"address\": \"123 Test Street, Test City\",\n    \"latitude\": 37.7749,\n    \"longitude\": -122.4194\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/addSchool",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "addSchool"
          ]
        },
        "description": "Add a new school with location data"
      },
      "response": []
    },
    {
      "name": "List Schools",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/listSchools?latitude=37.7749&longitude=-122.4194",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "listSchools"
          ],
          "query": [
            {
              "key": "latitude",
              "value": "37.7749"
            },
            {
              "key": "longitude",
              "value": "-122.4194"
            }
          ]
        },
        "description": "List all schools sorted by proximity to provided coordinates"
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    }
  ]
}